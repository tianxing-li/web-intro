/**index.wxss**/
.title{
  margin-top: 300rpx;
  text-align: center;
}
.temp{
  font-size: 200rpx;
  text-align: center;
  line-height: 280rpx;   /* 行高一般会设置为字号的1.4倍 */
  opacity: 0.7;   /* 这是所谓的透明度 */
}
.description{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.42;
}
.weather-wrapper{
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  position: relative;
}

.location-wrapper {
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.location {
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon {
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-text {
  opacity: 0.5;
}

.location-tipps {
  margin-top: 10rpx;
  text-align: center;
  opacity: 0.5;
}

.weather-bg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex; /* 横排排列 */
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx; /* 行高一般会设置为字号的1.4倍 */
  opacity: 0.5;
}

.forecast-list {
    display:flex;
}

.forecast-item {
    display:flex;
    flex-direction:column;
    flex-shrink: 0; /* 无强制压缩 */
    width: 120rpx;
    font-size: 36rpx;
    line-height: 42 rpx;
    align-items: center
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}

.day-weather {
  display: flex;  /* 横排排列 */
  align-items: center;
  position: absolute;
  bottom:  0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1); /* 定义那条线 */
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}