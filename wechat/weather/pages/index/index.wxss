/**index.wxss**/
.title{
  margin-top: 300rpx;
  text-align: center;
}
.temp{
  font-size: 200rpx;
  text-align: center;
  line-height: 280rpx;   /* 行高一般会设置为字号的1.4倍 */
  opacity: 0.7;   /* 这是所谓的透明度 */
}
.description{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.42;
}
.weather-wrapper{
  padding-top: 174rpx;
  padding-bottom: 250rpx;
  position: relative;
}
.weather-bg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}